{
  "name": "glsl-simple-include",
  "version": "0.0.6-alpha.3",
  "description": "Preprocessor for a simple \"#pragma include\" directive in shader files",
  "keywords": [
    "glsl"
  ],
  "author": "matgr1",
  "license": "MIT",
  "main": "build/es5/glsl-simple-include.js",
  "files": [
    "build/**/*"
  ],
  "typings": "build/glsl-simple-include.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/matgr1/glsl-simple-include"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "typescript": "2.0.3"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "strip-bom": "^3.0.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "sourceMaps": "inline"
  },
  "scripts": {
    "build:ts": "tsc -p ./src/tsconfig.json",
    "build:babel": "babel build/es6 -d build/es5",
    "build": "npm run build:ts && npm run build:babel"
  }
}